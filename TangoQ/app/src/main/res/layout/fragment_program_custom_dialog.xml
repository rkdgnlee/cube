<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/effect_ibtn_12dp"
    tools:context=".dialog.ProgramCustomDialogFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/sflPCD"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="64dp"
                            android:background="@color/subColor100"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/materialDivider11"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="20dp"
                            app:dividerColor="@color/subColor150"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView11" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@color/subColor100"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/materialDivider11" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@color/subColor100"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView13" />

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/materialDivider13"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="20dp"
                            app:dividerColor="@color/subColor150"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView18" />

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@color/subColor100"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/materialDivider13" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView21">

                            <include layout="@layout/rv_shimmer_exercise_item" />

                            <include layout="@layout/rv_shimmer_exercise_item" />

                            <include layout="@layout/rv_shimmer_exercise_item" />

                            <include layout="@layout/rv_shimmer_exercise_item" />

                            <include layout="@layout/rv_shimmer_exercise_item" />

                            <include layout="@layout/rv_shimmer_exercise_item" />
                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/etPCDTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/white"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:text="_"
                        android:textColor="@color/subColor800"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/ibtnPCDTop"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/effect_ibtn_12dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_info_800"
                        app:layout_constraintBottom_toBottomOf="@+id/etPCDTitle"
                        app:layout_constraintStart_toEndOf="@+id/etPCDTitle"
                        app:layout_constraintTop_toTopOf="@+id/etPCDTitle" />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/materialDivider2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="20dp"
                        app:dividerColor="@color/subColor150"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etPCDTitle" />

                    <TextView
                        android:id="@+id/tvPCDSet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="전체 진행도"
                        android:textColor="@color/subColor800"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="@+id/cardView12"
                        app:layout_constraintStart_toEndOf="@+id/cardView12"
                        app:layout_constraintTop_toTopOf="@+id/cardView12" />

                    <com.tomlecollegue.progressbars.HorizontalProgressView
                        android:id="@+id/hpvPCD"
                        android:layout_width="0dp"
                        android:layout_height="6dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        app:colorBackground="@color/secondContainerColor"
                        app:colorProgress="@color/secondaryColor"
                        app:layout_constraintBottom_toBottomOf="@+id/tvPCDSet"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvPCDSet"
                        app:layout_constraintTop_toTopOf="@+id/tvPCDSet" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView12"
                        android:layout_width="4dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/subColor150"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/materialDivider2" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvPCDHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView12" />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/materialDivider6"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="20dp"
                        app:dividerColor="@color/subColor150"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rvPCDHorizontal" />

                    <TextView
                        android:id="@+id/tvPCDCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:text="총 5개"
                        android:textColor="@color/subColor800"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/materialDivider6" />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/materialDivider9"
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        app:dividerColor="@color/subColor150"
                        app:layout_constraintBottom_toBottomOf="@+id/tvPCDCount"
                        app:layout_constraintEnd_toStartOf="@+id/linearLayout26"
                        app:layout_constraintStart_toEndOf="@+id/tvPCDCount"
                        app:layout_constraintTop_toTopOf="@+id/tvPCDCount" />

                    <LinearLayout
                        android:id="@+id/linearLayout26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toEndOf="@+id/tvPCDCount"
                        app:layout_constraintTop_toBottomOf="@+id/materialDivider6">

                        <ImageView
                            android:id="@+id/imageView65"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:src="@drawable/icon_time_sub_800" />

                        <TextView
                            android:id="@+id/tvPCDTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:text="25분"
                            android:textColor="@color/subColor800"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/materialDivider10"
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        app:dividerColor="@color/subColor150"
                        app:layout_constraintBottom_toBottomOf="@+id/tvPCDStage"
                        app:layout_constraintEnd_toStartOf="@+id/tvPCDStage"
                        app:layout_constraintStart_toEndOf="@+id/linearLayout26"
                        app:layout_constraintTop_toTopOf="@+id/tvPCDStage" />

                    <TextView
                        android:id="@+id/tvPCDStage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="초급자"
                        android:textColor="@color/subColor800"
                        android:textSize="16dp"
                        app:layout_constraintStart_toEndOf="@+id/linearLayout26"
                        app:layout_constraintTop_toBottomOf="@+id/materialDivider6" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvPCD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="80dp"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvPCDCount"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/tvPCDHealing"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="현재 주차의 운동을 완료했습니다\n다음 주까지 휴식해주세요!"
                        android:textColor="@color/subColor800"
                        android:textSize="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rvPCD"
                        app:layout_constraintVertical_bias="0.0" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/bckgnd_top_16"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPCDRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="@drawable/effect_ibtn_12dp"
            android:backgroundTint="@color/mainColor"
            android:padding="16dp"
            android:stateListAnimator="@null"
            android:text="운동 시작하기"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>

</FrameLayout>