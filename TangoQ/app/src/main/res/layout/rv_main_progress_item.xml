<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMPI"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/effect_ibtn_12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView35"
        android:layout_width="76dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivMPIThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@color/subColor100" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvMPIName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:text="정면 균형"
        android:textColor="@color/subColor800"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView48"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cardView35"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/media_play_button" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView48"
        app:layout_constraintEnd_toEndOf="@+id/imageView48"
        app:layout_constraintStart_toStartOf="@+id/imageView48"
        app:layout_constraintTop_toTopOf="@+id/imageView48"
        app:srcCompat="@drawable/media_play_button" />

    <TextView
        android:id="@+id/tvMPIPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bckgnd_rectangle_20"
        android:backgroundTint="@color/thirdColor"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:paddingStart="6dp"
        android:paddingTop="2dp"
        android:paddingEnd="6dp"
        android:paddingBottom="2dp"
        android:text="0%"
        android:textColor="@color/whiteText"
        android:textSize="14dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView48"
        app:layout_constraintEnd_toStartOf="@+id/imageView48"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toEndOf="@+id/imageView49" />

    <com.skydoves.progressview.ProgressView
        android:id="@+id/pvMPI"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView35"
        app:layout_constraintEnd_toEndOf="@+id/tvMPIPercent"
        app:layout_constraintStart_toStartOf="@+id/tvMPIName"
        app:progressView_colorBackground="@color/secondContainerColor"
        app:progressView_colorProgress="@color/thirdColor" />

    <ImageView
        android:id="@+id/imageView49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView48"
        app:layout_constraintStart_toStartOf="@+id/tvMPIName"
        app:srcCompat="@drawable/icon_rv_summary_time" />

    <TextView
        android:id="@+id/tvMPITime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="0초"
        android:textColor="@color/subColor800"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView49"
        app:layout_constraintStart_toEndOf="@+id/imageView49"
        app:layout_constraintTop_toTopOf="@+id/imageView49" />
</androidx.constraintlayout.widget.ConstraintLayout>