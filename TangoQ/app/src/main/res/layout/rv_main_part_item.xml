<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMPI"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/bckgnd_2_sub100_12">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView27"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivMPI"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@color/mainContainerColor" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvMPITitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="오버헤드 스쿼트"
        android:textColor="@color/subColor800"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view31"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bckgnd_rectangle_8"
        android:backgroundTint="@color/subColor200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardView27"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/vMPILeft"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="@drawable/bckgnd_left_delete_8"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/view31"
        app:layout_constraintEnd_toStartOf="@+id/view32"
        app:layout_constraintStart_toStartOf="@+id/view31"
        app:layout_constraintTop_toTopOf="@+id/view31" />

    <View
        android:id="@+id/vMPIRight"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="@drawable/bckgnd_both_8"
        android:backgroundTint="@color/thirdColor"
        android:elevation="2dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/view31"
        app:layout_constraintEnd_toEndOf="@+id/view31"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view31"
        app:layout_constraintTop_toTopOf="@+id/view31"
        app:layout_constraintWidth_percent="0.4" />

    <View
        android:id="@+id/view32"
        android:layout_width="1.5dp"
        android:layout_height="20dp"
        android:background="@color/subColor500"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/view31"
        app:layout_constraintEnd_toEndOf="@+id/view31"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@+id/view31"
        app:layout_constraintTop_toTopOf="@+id/view31" />

    <TextView
        android:id="@+id/tvMPILeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="표준이하"
        android:textColor="@color/deleteColor"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/view32"
        app:layout_constraintStart_toStartOf="@+id/view31"
        app:layout_constraintTop_toBottomOf="@+id/view31" />

    <TextView
        android:id="@+id/tvMPIRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="표준"
        android:textColor="@color/subColor400"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/view31"
        app:layout_constraintStart_toEndOf="@+id/view32"
        app:layout_constraintTop_toBottomOf="@+id/view31" />

    <ImageView
        android:id="@+id/ivMPIArrow"
        android:layout_width="20dp"
        android:layout_height="16dp"
        android:layout_marginBottom="2dp"
        android:padding="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/view31"
        app:layout_constraintEnd_toEndOf="@+id/view31"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="@+id/view31"
        app:srcCompat="@drawable/icon_arrow_board" />

    <TextView
        android:id="@+id/tvMPISummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:breakStrategy="simple"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textColor="@color/subColor800"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/ivMPIArrow"
        app:layout_constraintEnd_toStartOf="@+id/cardView27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMPITitle" />

</androidx.constraintlayout.widget.ConstraintLayout>

