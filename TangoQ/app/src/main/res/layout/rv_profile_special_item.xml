<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout60"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white">

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/materialDivider14"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:dividerColor="@color/subColor100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_gravity="center|right"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_night_mode" />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/schPfS"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:paddingStart="60dp"
        android:paddingEnd="16dp"
        android:text="다크 모드"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:thumbTint="#FFFFFF"
        app:trackDecorationTint="@color/tint_main_sub200"
        app:trackTint="@color/tint_main_sub200"
        app:useMaterialThemeColors="false" />

</androidx.constraintlayout.widget.ConstraintLayout>