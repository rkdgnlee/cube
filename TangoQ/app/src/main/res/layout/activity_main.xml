<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnbMain"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@color/whitebar"
        android:backgroundTintMode="add"
        android:clipToPadding="true"
        android:outlineProvider="none"
        android:persistentDrawingCache="none"
        app:elevation="20dp"
        app:itemIconSize="32dp"
        app:itemPaddingBottom="20dp"
        app:itemPaddingTop="20dp"
        app:itemRippleColor="@color/white"
        app:itemTextColor="@color/subColor700"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/main_menu" />

    <FrameLayout
        android:id="@+id/flMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:elevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bnbMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <View
        android:id="@+id/view9"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:background="@drawable/color_gradient_top_shadow"
        app:layout_constraintBottom_toTopOf="@+id/bnbMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>