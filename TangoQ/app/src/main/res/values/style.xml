<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  alertdialog 시작   -->
    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="MaterialAlertDialog.App.Body.Text" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="android:background">@color/white</item>
    </style>
    <!--    alertdialog 끝 -->

    <!--b bottomsheetdialog 스타일 -->
    <style name="Theme_Design_BottomSheetDialog1" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">auto</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DialogFragmentStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:radius">16dp</item>
    </style>
    <style name="AppTheme.DialogFragment" parent="Theme.MaterialComponents.Dialog">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="AppTheme.FlexableDialogFragment" parent="Theme.MaterialComponents.Dialog">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>


    <style name="Theme.App.Checkbox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/mainColor</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.RadioButton</item>
    </style>

    <style name="ThemeOverlay.App.RadioButton" parent="">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorPrimary">@color/mainColor</item>
    </style>

    <!--   fab   -->
    <style name="Stroke.FloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="shapeAppearanceOverlay">@style/StrokeShapeAppearance</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <style name="StrokeShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
        <item name="strokeWidth">4dp</item>
        <item name="strokeColor">@color/subColor200</item>
    </style>

<!--    popupMenu-->
    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/bckgnd_2_main_20</item>
    </style>



<!--    tab Layout style -->
    <style name="TabLayoutTextStyle" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabLayoutTextStyle4Item" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

