<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ExerciseFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsvE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout11"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout14"
                    android:layout_width="match_parent"
                    android:layout_height="86dp">

                    <TextView
                        android:id="@+id/textView104"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="운동"
                        android:textColor="@color/black"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView47"
                        app:layout_constraintStart_toEndOf="@+id/imageView47"
                        app:layout_constraintTop_toTopOf="@+id/imageView47" />

                    <ImageView
                        android:id="@+id/imageView47"
                        android:layout_width="36dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/app_logo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/ibtnEAlarm"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="32dp"
                        android:background="@drawable/effect_ibtn_20dp"
                        android:backgroundTint="@color/white"
                        android:contentDescription="showAlarm"
                        android:padding="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_alarm"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/ibtnEQRCode"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/effect_ibtn_12dp"
                        android:contentDescription="showQrCodeScan"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_qr_code"
                        app:layout_constraintBottom_toBottomOf="@+id/ibtnEAlarm"
                        app:layout_constraintEnd_toStartOf="@+id/ibtnEAlarm"
                        app:layout_constraintTop_toTopOf="@+id/ibtnEAlarm" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clEProgress1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView29">

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="30dp"
                    android:text="최근 진행한 운동"
                    android:textColor="@color/subColor800"
                    android:textSize="28dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvEProgress"
                    android:layout_width="0dp"
                    android:layout_height="128dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="40dp"
                    android:visibility="visible"
                    app:cardBackgroundColor="#EFEFEF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView44">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clEProgress2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView31"
                            android:layout_width="128dp"
                            android:layout_height="0dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/ivEThumbnail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                app:srcCompat="@color/black" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvEName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradient_sub_180"
                            android:paddingStart="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:singleLine="true"
                            android:text="어깨 가슴 프로그램"
                            android:textSize="20dp"
                            app:layout_constraintBottom_toBottomOf="@+id/cardView31"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/cardView31"
                            app:layout_constraintTop_toTopOf="@+id/cardView31"
                            app:layout_constraintVertical_bias="0.15" />

                        <TextView
                            android:id="@+id/tvETime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="___"
                            android:textColor="@color/subColor800"
                            android:textSize="16dp"
                            app:layout_constraintEnd_toStartOf="@+id/tvEStage"
                            app:layout_constraintHorizontal_bias="0.2"
                            app:layout_constraintStart_toEndOf="@+id/cardView31"
                            app:layout_constraintTop_toBottomOf="@+id/tvEName" />

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/icon_rv_summary_time"
                            app:layout_constraintBottom_toBottomOf="@+id/tvETime"
                            app:layout_constraintEnd_toStartOf="@+id/tvETime"
                            app:layout_constraintTop_toTopOf="@+id/tvETime" />

                        <ImageView
                            android:id="@+id/ivEStage"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintBottom_toBottomOf="@+id/tvEStage"
                            app:layout_constraintEnd_toStartOf="@+id/tvEStage"
                            app:layout_constraintTop_toTopOf="@+id/tvEStage"
                            app:srcCompat="@drawable/icon_stage_1" />

                        <TextView
                            android:id="@+id/tvEStage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="___"
                            android:textColor="@color/subColor800"
                            android:textSize="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.6"
                            app:layout_constraintStart_toEndOf="@+id/cardView31"
                            app:layout_constraintTop_toBottomOf="@+id/tvEName" />

                        <com.skydoves.progressview.ProgressView
                            android:id="@+id/hpvE"
                            android:layout_width="0dp"
                            android:layout_height="12dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/cardView31"
                            app:layout_constraintTop_toBottomOf="@+id/tvETime"
                            app:progressView_colorBackground="@color/subColor150"
                            app:progressView_colorProgress="@color/thirdColor" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/bckgnd_rectangle_20"
                android:backgroundTint="@color/secondContainerColor"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clEProgress1">

                <ImageView
                    android:id="@+id/imageView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_search" />

                <TextView
                    android:id="@+id/tvESearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="8"
                    android:background="@drawable/effect_ibtn_20dp"
                    android:backgroundTint="#00FFFFFF"
                    android:gravity="center_vertical"
                    android:hint="운동이름을 검색하세요"
                    android:singleLine="true"
                    android:textColorHint="@color/subColor800"
                    android:textSize="22dp" />

                <ImageButton
                    android:id="@+id/ibtnEClear"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/effect_ibtn_12dp"
                    android:backgroundTint="#00FFFFFF"
                    android:contentDescription="clearEditText"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_text_clear" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvEMainCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>