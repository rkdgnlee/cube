<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMI"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/effect_ibtn">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout26"
        android:layout_width="74dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bckgnd_12_edit_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvMIScore"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="98"
            android:textColor="@color/thirdWhiteColor"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/materialDivider17"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:dividerColor="@color/subColor150"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvMIName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:singleLine="true"
        android:text="2024.05.17"
        android:textColor="@color/subColor800"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout26"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333" />

    <TextView
        android:id="@+id/tvMIType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/subColor400"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMIName"
        app:layout_constraintStart_toEndOf="@+id/tvMIName"
        app:layout_constraintTop_toTopOf="@+id/tvMIName" />

    <TextView
        android:id="@+id/textView48"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginEnd="40dp"
        android:drawableEnd="@drawable/icon_arrow_right"
        android:drawableTint="@color/thirdWhiteColor"
        android:gravity="center_vertical"
        android:textColor="@color/thirdWhiteColor"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMISub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:textColor="@color/subColor700"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/textView48"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout26"
        app:layout_constraintTop_toBottomOf="@+id/tvMIName" />
</androidx.constraintlayout.widget.ConstraintLayout>