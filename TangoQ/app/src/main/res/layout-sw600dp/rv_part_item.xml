<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clPI"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/effect_ibtn_20dp"
    android:backgroundTint="@color/mainColor"
    android:paddingStart="36dp"
    android:paddingTop="5dp"
    android:paddingEnd="36dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/tvPIPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="목관절"
        android:textColor="@color/whiteText"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPIPartCheck"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="-4dp"
        android:layout_marginBottom="-4dp"
        app:cardBackgroundColor="@color/deleteTextColor"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tvPIPart"
        app:layout_constraintStart_toEndOf="@+id/tvPIPart" />
</androidx.constraintlayout.widget.ConstraintLayout>