<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clPI"
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/bckgnd_rectangle_8"
    android:backgroundTint="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView37"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/subColor400"
        app:cardCornerRadius="48dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2">

        <ImageView
            android:id="@+id/ivPI"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/icon_part1" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvPI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좌측 어깨"
        android:textColor="@color/subColor800"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView37" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPI"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="-4dp"
        app:cardBackgroundColor="@color/deleteColor"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView37"
        app:layout_constraintTop_toTopOf="@+id/cardView37">

        <TextView
            android:id="@+id/textView55"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="!"
            android:textColor="@color/whiteText"
            android:textSize="14dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>