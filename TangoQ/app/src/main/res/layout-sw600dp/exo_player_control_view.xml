<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout16"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="#80959595"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:targetApi="28">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="playVideo"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:srcCompat="@drawable/media_play_button" />

        <ImageButton
            android:id="@+id/btnPause"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="pauseButton"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/media_pause_button" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/llSpeed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold" />

        <View
            android:id="@id/exo_progress_placeholder"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:contentDescription="moveToPointOfView" />

        <TextView
            android:id="@id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="duration"
            android:includeFontPadding="false"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/exo_exit"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="#00FFFFFF"
        android:contentDescription="exitDialog"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/media_exit_button" />

    <ImageButton
        android:id="@+id/exo_replay_5"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="#00FFFFFF"
        android:contentDescription="moveTo5SecondsForward"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
        app:srcCompat="@drawable/icon_5_replay" />

    <ImageButton
        android:id="@+id/exo_forward_5"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="#00FFFFFF"
        android:contentDescription="moveTo5SecondsBack"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
        app:srcCompat="@drawable/icon_5_forward" />

    <LinearLayout
        android:id="@+id/llSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn05"
            android:layout_width="86dp"
            android:layout_height="64dp"
            android:background="@drawable/effect_ibtn_20dp"
            android:backgroundTint="#00FFFFFF"
            android:visibility="gone"
            app:srcCompat="@drawable/icon_05" />

        <ImageButton
            android:id="@+id/btn075"
            android:layout_width="86dp"
            android:layout_height="64dp"
            android:background="@drawable/effect_ibtn_20dp"
            android:backgroundTint="#00FFFFFF"
            android:visibility="gone"
            app:srcCompat="@drawable/icon_075" />

        <ImageButton
            android:id="@+id/btn10"
            android:layout_width="86dp"
            android:layout_height="64dp"
            android:background="@drawable/effect_ibtn"
            android:backgroundTint="#00FFFFFF"
            android:visibility="gone"
            app:srcCompat="@drawable/icon_10" />

        <ImageButton
            android:id="@+id/btnSpeed"
            android:layout_width="86dp"
            android:layout_height="64dp"
            android:background="@drawable/effect_ibtn"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/icon_speed" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>