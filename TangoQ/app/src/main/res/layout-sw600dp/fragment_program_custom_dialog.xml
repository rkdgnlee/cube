<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/effect_ibtn_12dp"
    tools:context=".dialog.ProgramCustomDialogFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <EditText
                android:id="@+id/etPCDTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:maxLength="15"
                android:singleLine="true"
                android:text="_"
                android:textColor="@color/subColor800"
                android:textSize="32dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/ibtnPCDTop"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/effect_ibtn_12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_info_800"
                app:layout_constraintBottom_toBottomOf="@+id/etPCDTitle"
                app:layout_constraintStart_toEndOf="@+id/etPCDTitle"
                app:layout_constraintTop_toTopOf="@+id/etPCDTitle" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/materialDivider2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="40dp"
                app:dividerColor="@color/subColor150"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etPCDTitle" />

            <TextView
                android:id="@+id/tvPCDSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="전체 진행도"
                android:textColor="@color/subColor800"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardView12"
                app:layout_constraintStart_toEndOf="@+id/cardView12"
                app:layout_constraintTop_toTopOf="@+id/cardView12" />

            <com.tomlecollegue.progressbars.HorizontalProgressView
                android:id="@+id/hpvPCD"
                android:layout_width="400dp"
                android:layout_height="8dp"
                android:layout_marginStart="10dp"
                app:colorBackground="@color/secondContainerColor"
                app:colorProgress="@color/secondaryColor"
                app:layout_constraintBottom_toBottomOf="@+id/tvPCDSet"
                app:layout_constraintStart_toEndOf="@+id/tvPCDSet"
                app:layout_constraintTop_toTopOf="@+id/tvPCDSet" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView12"
                android:layout_width="4dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="@color/subColor150"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialDivider2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPCDHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPCDSet" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/materialDivider6"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                app:dividerColor="@color/subColor150"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvPCDHorizontal" />

            <TextView
                android:id="@+id/tvPCDCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:text="총 5개"
                android:textColor="@color/subColor800"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialDivider6" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/materialDivider9"
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                app:dividerColor="@color/subColor150"
                app:layout_constraintBottom_toBottomOf="@+id/tvPCDCount"
                app:layout_constraintStart_toEndOf="@+id/tvPCDCount"
                app:layout_constraintTop_toTopOf="@+id/tvPCDCount" />

            <LinearLayout
                android:id="@+id/linearLayout26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/materialDivider9"
                app:layout_constraintStart_toEndOf="@+id/materialDivider9"
                app:layout_constraintTop_toTopOf="@+id/materialDivider9">

                <ImageView
                    android:id="@+id/imageView65"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/icon_time_sub_800" />

                <TextView
                    android:id="@+id/tvPCDTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="25분"
                    android:textColor="@color/subColor800"
                    android:textSize="20dp" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/materialDivider10"
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                app:dividerColor="@color/subColor150"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout26"
                app:layout_constraintStart_toEndOf="@+id/linearLayout26"
                app:layout_constraintTop_toTopOf="@+id/linearLayout26" />

            <TextView
                android:id="@+id/tvPCDStage"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="초급자"
                android:textColor="@color/subColor800"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/materialDivider10"
                app:layout_constraintStart_toEndOf="@+id/materialDivider10"
                app:layout_constraintTop_toTopOf="@+id/materialDivider10" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPCD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="90dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPCDCount"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/background_top_16dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPCDLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="@drawable/effect_ibtn_12dp"
            android:backgroundTint="@color/subColor200"
            android:padding="20dp"
            android:stateListAnimator="@null"
            android:text="취소"
            android:textColor="@color/subColor800"
            android:textSize="24dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPCDRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="@drawable/effect_ibtn_12dp"
            android:backgroundTint="@color/mainColor"
            android:padding="20dp"
            android:stateListAnimator="@null"
            android:text="운동 시작하기"
            android:textColor="@color/white"
            android:textSize="24dp" />
    </LinearLayout>

</FrameLayout>