<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout15"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.skydoves.progressview.ProgressView
        android:id="@+id/hpvPSI"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="12dp"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progressView_animation="decelerate"
        app:progressView_colorBackground="@color/subColor100"
        app:progressView_colorProgress="@color/thirdColor"
        app:progressView_radius="20dp" />

    <TextView
        android:id="@+id/tvPSIName"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="12dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/effect_ibtn_20dp"
        android:backgroundTint="#00F6F6F6"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:stateListAnimator="@null"
        android:text="Day 1"
        android:textColor="@color/subColor400"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>