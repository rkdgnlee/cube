<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/effect_ibtn_12dp"
    tools:context=".fragment.MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView23"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/whitebar">

                <ImageButton
                    android:id="@+id/ibtnMAlarm"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/effect_ibtn_20dp"
                    android:backgroundTint="@color/white"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_alarm"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="36dp"
                    android:layout_height="38dp"

                    android:layout_marginStart="36dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/app_logo" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="메인"
                    android:textColor="@color/black"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView19"
                    app:layout_constraintStart_toEndOf="@+id/imageView19"
                    app:layout_constraintTop_toTopOf="@+id/imageView19" />

                <ImageButton
                    android:id="@+id/ibtnMQRCode"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/effect_ibtn_12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_qr_code"
                    app:layout_constraintBottom_toBottomOf="@+id/ibtnMAlarm"
                    app:layout_constraintEnd_toStartOf="@+id/ibtnMAlarm"
                    app:layout_constraintTop_toTopOf="@+id/ibtnMAlarm" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsvM"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView23">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout31"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/secondBgContainerColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvMTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="30dp"
                        android:text="측정 연동 운동"
                        android:textColor="@color/subColor800"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvMMeasureDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="40dp"
                        android:background="@drawable/background_rectangle_20dp"
                        android:backgroundTint="@color/secondaryColor"
                        android:drawableEnd="@drawable/icon_arrow_right_small"
                        android:drawableTint="@color/white"
                        android:gravity="center|center_vertical"
                        android:paddingStart="15dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="4dp"
                        android:text="2024.08.30"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/tvMTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvMTitle" />

                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/background_stroke_1dp_sub_color_150_20dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvMTitle"
                        app:layout_constraintVertical_bias="0.0">

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/sflM"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <View
                                    android:id="@+id/view"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="20dp"
                                    android:background="@color/subColor100"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <View
                                    android:id="@+id/view3"
                                    android:layout_width="0dp"
                                    android:layout_height="64dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="15dp"
                                    android:background="@color/subColor100"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/view"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <View
                                    android:id="@+id/view5"
                                    android:layout_width="0dp"
                                    android:layout_height="28dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="15dp"
                                    android:background="@color/subColor100"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/view" />

                                <View
                                    android:id="@+id/view6"
                                    android:layout_width="0dp"
                                    android:layout_height="86dp"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="15dp"
                                    android:layout_marginBottom="20dp"
                                    android:background="@color/subColor100"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/view5" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.facebook.shimmer.ShimmerFrameLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clMMeasure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/constraintLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:layout_marginEnd="20dp"
                                android:background="@drawable/background_rectangle_12dp"
                                android:backgroundTint="@color/secondBgContainerColor"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="1.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintWidth_percent="0.725">

                                <TextView
                                    android:id="@+id/tvMMeasureResult1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:text="_"
                                    android:textColor="@color/subColor800"
                                    android:textSize="22dp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tvMMeasureResult2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="20dp"
                                    android:singleLine="true"
                                    android:text="주의 부위: _"
                                    android:textColor="@color/subColor800"
                                    android:textSize="20dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tvMMeasureResult1" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <TextView
                                android:id="@+id/tvMOverall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="40dp"
                                android:text="_"
                                android:textColor="@color/subColor800"
                                android:textSize="48dp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="4dp"
                                android:layout_height="0dp"
                                app:dividerColor="@color/subColor150"
                                app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
                                app:layout_constraintEnd_toStartOf="@+id/constraintLayout"
                                app:layout_constraintStart_toEndOf="@+id/tvMOverall"
                                app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

                            <TextView
                                android:id="@+id/tvMCustomProgress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="30dp"
                                android:text="완료 _/_개"
                                android:textSize="24dp"
                                app:layout_constraintStart_toEndOf="@+id/cardView2"
                                app:layout_constraintTop_toBottomOf="@+id/rvM1" />

                            <com.tomlecollegue.progressbars.HorizontalProgressView
                                android:id="@+id/hpvMCustomProgress"
                                android:layout_width="0dp"
                                android:layout_height="8dp"
                                android:layout_marginStart="40dp"
                                android:layout_marginEnd="30dp"
                                android:background="@color/white"
                                app:colorBackground="@color/secondContainerColor"
                                app:colorProgress="@color/secondaryColor"
                                app:layout_constraintBottom_toBottomOf="@+id/tvMCustomProgress"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/tvMCustomProgress"
                                app:layout_constraintTop_toTopOf="@+id/tvMCustomProgress" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnMCustom"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/effect_ibtn_12dp"
                                android:backgroundTint="@color/mainColor"
                                android:padding="20dp"
                                android:stateListAnimator="@null"
                                android:text="맞춤 프로그램 시작하기"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tvMCustomProgress" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView2"
                                android:layout_width="4dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="20dp"
                                app:cardBackgroundColor="@color/subColor100"
                                app:cardElevation="0dp"
                                app:layout_constraintBottom_toBottomOf="@+id/tvMCustomProgress"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/tvMCustomProgress" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvM1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginEnd="20dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivMBlur"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
                        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
                        app:layout_constraintStart_toStartOf="@+id/linearLayout5"
                        app:layout_constraintTop_toTopOf="@+id/linearLayout5" />

                    <TextView
                        android:id="@+id/tvMBlur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목표설정 및 측정을 진행해 주세요."
                        android:textColor="@color/subColor800"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
                        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
                        app:layout_constraintStart_toStartOf="@+id/linearLayout5"
                        app:layout_constraintTop_toTopOf="@+id/linearLayout5" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/tvMCustom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="30dp"
                    android:text="밸런스 체크"
                    android:textColor="@color/subColor800"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvM2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvMCustom" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>